<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="viewModel"
      type="com.dylanc.dontforget.ui.user.register.RegisterViewModel" />

    <variable
      name="clickProxy"
      type="com.dylanc.dontforget.ui.user.register.RegisterActivity.ClickProxy" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
      android:id="@+id/edt_username"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:hint="请输入用户名"
      android:inputType="textPersonName"
      android:text="@={viewModel.username}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <EditText
      android:id="@+id/edt_password"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="请输入密码"
      android:inputType="textPassword"
      android:text="@={viewModel.password}"
      app:layout_constraintEnd_toEndOf="@+id/edt_username"
      app:layout_constraintStart_toStartOf="@+id/edt_username"
      app:layout_constraintTop_toBottomOf="@+id/edt_username" />

    <EditText
      android:id="@+id/edt_confirm_password"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:ems="10"
      android:hint="请再次输入密码"
      android:inputType="textPassword"
      android:text="@={viewModel.confirmPassword}"
      app:layout_constraintEnd_toEndOf="@+id/edt_username"
      app:layout_constraintStart_toStartOf="@+id/edt_username"
      app:layout_constraintTop_toBottomOf="@+id/edt_password" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/button"
      android:layout_width="0dp"
      android:layout_height="56dp"
      android:layout_marginTop="16dp"
      android:onClick="@{()->clickProxy.onRegisterBtnClick()}"
      android:text="注册"
      android:textSize="18sp"
      app:cornerRadius="28dp"
      app:layout_constraintEnd_toEndOf="@+id/edt_username"
      app:layout_constraintStart_toStartOf="@+id/edt_username"
      app:layout_constraintTop_toBottomOf="@+id/edt_confirm_password" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>